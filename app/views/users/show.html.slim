.row
  .col-sm-12
    .panel.panel-default
      .panel-heading.resume-heading
        .row
          .col-lg-12
            .col-xs-12.col-sm-4
              figure
                img.img-circle.img-responsive[src=@user_profile.avatar.thumb.url width='250' heigth='250']
            .col-xs-12.col-sm-8
              ul.list-group
                li.list-group-item
                  | #{@user_profile.first_name}
                li.list-group-item
                  | #{@user_profile.last_name}
                li.list-group-item
                  | #{@user_profile.city}
                li.list-group-item
                  | #{@user_profile.sex}
                li.list-group-item
                  | #{@user_profile.birthday}
                li.list-group-item
                  | #{@user_profile.phone}
                li.list-group-item
                  |  #{current_user.email}
        h4
          |  Description:
        p
          |  #{@user_profile.description}
        = link_to 'Edit profile', edit_user_path, class: 'btn btn-default'
