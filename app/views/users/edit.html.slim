= form_for current_user do |form|
  = form.fields_for :user_profile do |ff|
    .form-group
      = ff.label :full_name
      br/
      = ff.text_field :full_name
    .form-group
      = ff.label :city
      br/
      = ff.text_field :city
    .form-group
      = ff.label :description
      br/
      = ff.text_area :description
    .form-group
      = ff.label :avatar
      br/
      = ff.file_field :avatar
      br/
      = ff.hidden_field :avatar_cache
    .actions
      = ff.submit
